<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/gameShowButtonHeight"
        android:id="@+id/imageButton"
        android:src="@drawable/rha_btn_red"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:layout_gravity="bottom"
        android:text="@string/rha_gameshow_player1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/gameShowButtonHeight"
        android:id="@+id/imageButton2"
        android:src="@drawable/rha_btn_red"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:text="@string/rha_gameshow_player2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/gameShowButtonHeight"
        android:id="@+id/imageButton3"
        android:src="@drawable/rha_btn_red"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_gravity="right|top"
        android:text="@string/rha_gameshow_player3" />

</LinearLayout>
