<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/gameShowButtonHeight"
            android:id="@+id/imageButton"
            android:src="@drawable/rha_btn_red"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:text="@string/rha_gameshow_player1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/gameShowButtonHeight"
            android:id="@+id/imageButton2"
            android:src="@drawable/rha_btn_red"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:text="@string/rha_gameshow_player2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/gameShowButtonHeight"
            android:id="@+id/imageButton3"
            android:src="@drawable/rha_btn_red"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:text="@string/rha_gameshow_player3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/gameShowButtonHeight"
            android:id="@+id/imageButton4"
            android:src="@drawable/rha_btn_red"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:text="@string/rha_gameshow_player4" />

    </TableRow>

</TableLayout>
